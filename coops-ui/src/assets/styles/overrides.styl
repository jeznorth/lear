// Vuetify Overrides

.container
  padding 1.5rem

// Buttons
.v-btn
  text-transform none

  // Position progress indicator in the button
  .v-progress-circular
    margin-right 1rem
    margin-left -0.5rem

// Fix position of labels in the text field inputs
[class^="v-text-field"] .v-label--active
  transform: translateY(-8px) scale(.75);